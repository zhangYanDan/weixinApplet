/**index.wxss**/

.container{padding:0;background:#f5f5f5;font-family: "微软雅黑";}
.indexNavBar{background:#ff6619;width:100%;}
.img{width:21px;margin:5px 10px;vertical-align: middle;}
.name{vertical-align: middle;font-size:14px;color:#fff;}
.left{float:left;vertical-align: middle;width:24%;}
.searchInput{float:left;width:54%;vertical-align: middle;background:#ff9a67;margin-top:5px;border-radius:3px;}
.searchInput input{font-size:14px;color:#fff;padding:0 10px;width:80%;}
.right{width:14%;float:left;vertical-align: middle;padding:0 10px;font-size:14px;color:#fff;margin-top:10px;text-align: center;}
.swiper{width:100%;}
.swiper .slide-image{width:100%;}
.indexGrid{width:100%;margin-top:10px;background:#fff;overflow:hidden;padding:10px 0;}
.indexGrid .grid-3{width:25%;float:left;font-size:14px;}
.indexGrid .grid-3 image{width:50%;margin:0 auto;display: block;}
.indexGrid .grid-3 text{text-align: center;display: block;margin:10px 0;}
.indexGrid navigator:nth-child(5){clear:both;}

.tourInfo{width:100%;background:#fff;margin:10px 0;padding-bottom:10px;}
.tourInfo .tourInfoTitle{margin: 0.5rem;overflow:hidden;}
.tourInfo .name{color: #000;font-weight: bold;font-size:16px;}
.tourInfo .more{color: #000;font-size:14px;float:right;line-height: 22px;}
.tourDiv {width:100%;margin-top:10px;}
.tourDiv .grid-4{width:31.3%;margin:0 1%;float:left;position:relative;}
.tourDiv .grid-4 image{width:100%;margin:0 auto;display: block;}
.tourDiv .title{position: absolute;left:0;bottom:0;width:100%;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;font-size:12px;color:#fff;z-index: 10;line-height: 20px;text-align: center;}
.tourDiv .bg{background:#000;opacity: 0.5;width:100%;height: 20px;position:absolute;left:0;bottom:0;z-index:5;}

.hotAct{width:100%;background:#fff;padding-bottom:10px;padding-top:10px;}
.hotAct .title{text-align: left;padding-left:10px;font-size:16px;font-weight: bold;}
.gridItem{width:98%;margin:10px auto;display: block;position:relative;}
.gridItem image{width:100%;border-radius: 5px;}
.gridItem .title{font-size:12px;width:80%;display: block;margin:0 auto;position: absolute;left:0;right:0;top:50px;text-align: center;color:#fff;}


@media only screen and (min-width: 320px) and (max-width:375px){
    .searchInput {margin-top:6px;}

}
@media only screen and (min-width: 376px) and (max-width: 414px){
    .searchInput {margin-top:4px;}

}